<Window x:Class="AlarmDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlarmDisplay"
        mc:Ignorable="d"
        Title="Alarms" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible"  Height="400">
            <TextBlock Name="History" FontFamily="Helvetica" Background="LightBlue" Foreground="DarkBlue" FontSize="15" Width="700" Height="310"/>
        </ScrollViewer>
        <Button Content="Close" Foreground="White" Click="CloseClick" Style="{DynamicResource MaterialDesignRaisedButton}"
         HorizontalAlignment="Left" Background="IndianRed" Margin="368,378,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
